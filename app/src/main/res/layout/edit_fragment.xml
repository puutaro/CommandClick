<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="0.6"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <include
            android:id="@+id/edit_list_bk_frame"
            layout="@layout/icon_caption_layout_for_edit_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:foregroundGravity="center"
            android:background="@color/trans"
            android:backgroundTint="@color/trans"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit_title_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_title_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
<!--        app:layout_constraintEnd_toStartOf="@+id/editTextView"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="2"-->
        <FrameLayout
            android:id="@+id/edit_backstack_count_frame"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_title_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextView"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:foregroundGravity="center"
            android:layout_marginEnd="15dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/edit_backstack_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:gravity="center_vertical"
                android:alpha="1"
                android:layout_marginStart="0dp"
                android:layout_gravity="center_vertical"
                app:shapeAppearanceOverlay="@style/round_corner_for_backstack_count"
                app:srcCompat="@drawable/white_grad"
                android:background="@null"
                android:backgroundTint="@null"
                android:foregroundGravity="center"
                />
        </FrameLayout>
        <com.puutaro.commandclick.custom_view.OutlineTextView
            android:id="@+id/editTextView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_title_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit_backstack_count_frame"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@null"
            android:fontFamily="sans-serif"
            />
<!--        / app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintStart_toEndOf="@+id/edit_title_image"-->
<!--        app:layout_constraintEnd_toEndOf="parent"
 app:layout_constraintHorizontal_weight="8"-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/edit_list_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/edit_list_search_edit_text"
            android:textIsSelectable="true"
            android:scrollbars="vertical"
            android:background="@null"
            android:fadeScrollbars="false"
            android:layout_gravity="center"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_list_search_edit_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_list_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/edit_list_footer_constraint_layout"
            android:imeOptions="actionDone"
            android:selectAllOnFocus="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="#00000000"
            android:hint="search"
            android:textSize="20sp"
            android:autofillHints=""
            android:inputType="text"
            android:visibility="gone"
            />
<!--        app:layout_constraintBottom_toTopOf="@+id/edit_list_button_frame_layout1"-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_list_footer_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/edit_list_toolbar_constraint_layout"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_list_toolbar_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:backgroundTint="@color/trans"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>