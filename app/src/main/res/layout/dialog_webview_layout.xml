<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/webview_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner_drawable">
    <WebView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/webview_dialog_webview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <FrameLayout
        android:id="@+id/dialog_webview_text_selection_bar_frame"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/dialog_webview_text_selection_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:background="@null"
            android:backgroundTint="@null"
            android:weightSum="1"
            >
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.puutaro.commandclick.custom_view.OutlineTextView
            android:id="@+id/dialog_webview_text_selection_search_cur_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:visibility="gone"
            android:alpha="0.9"
            />
    </FrameLayout>
    <ProgressBar
        android:id="@+id/dialog_webview_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="0dp"
        android:indeterminate="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/first_bottom_linearlayout"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/first_bottom_linearlayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@null"
        android:backgroundTint="@null"
        android:weightSum="1"
        >
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>