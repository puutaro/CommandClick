<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/list_index_edit_adapter_mterial_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="10dp"
    app:checkedIcon="@drawable/icons8_check_ok"
    app:checkedIconTint="@color/checked_item_color"
    app:checkedIconSize="30dp"
    app:checkedIconMargin="10dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    >
<!--    app:strokeWidth="4dp"
        app:strokeColor="@color/list_index_item_selector"
        android:foreground="?android:attr/selectableItemBackground"-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/list_index_edit_adapter_horizontal_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
<!--"@android:color/white"-->
<!--    <androidx.appcompat.widget.LinearLayoutCompat-->
<!--        android:id="@+id/list_index_edit_adapter_logo_linearlayout"-->
<!--        android:layout_width="80dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginBottom="10dp"-->
<!--        android:layout_marginStart="10dp"-->
<!--        android:layout_marginEnd="0dp"-->
<!--        android:padding="2dp"-->
<!--        android:background="@android:color/white"-->
<!--        android:orientation="vertical"-->
<!--        android:layout_gravity="center_vertical"-->
<!--        >-->
<!--        -->
        <RelativeLayout
            android:id="@+id/list_index_edit_adapter_logo_linearlayout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:padding="2dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/list_index_edit_adapter_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:background="?android:attr/selectableItemBackground"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/list_index_edit_adapter_image_caption"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="20sp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/list_index_edit_adapter_vertical_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/list_index_edit_adapter_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:textSize="20sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/list_index_edit_adapter_file_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>
