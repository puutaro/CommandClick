<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/prompt_list_dialog_constraint"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@null"
    android:background="@color/trans"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/prompt_list_dialog_list_bk_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@null"
        android:background="@null"
        app:tint="@null"
        android:src="@null"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:id="@+id/prompt_list_dialog_bk_relative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@null"
        android:background="@null">

    </RelativeLayout>
    <com.puutaro.commandclick.custom_view.OutlineTextView
        android:id="@+id/prompt_list_dialog_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="85dp"
        android:backgroundTint="@null"
        android:background="@null"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:shadowColor="#ffffff"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="15dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:maxLines="@null"
        android:ellipsize="end"
        />
<!--    android:lineSpacingMultiplier="30"
        android:lineSpacingExtra="30dp"-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/prompt_list_dialog_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/prompt_list_dialog_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/prompt_list_dialog_search_edit_cardview"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:background="@null"
        android:backgroundTint="@null"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/prompt_list_dialog_vertical_search_cardview_margin"
            />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prompt_list_dialog_search_edit_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp"
        android:alpha="0.8"
        android:layout_marginBottom="@dimen/prompt_list_dialog_vertical_search_cardview_margin"
        android:visibility="gone"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/prompt_list_dialog_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:background="@color/white"
            android:hint="search"
            android:textSize="23sp"
            android:autofillHints=""
            />
    </com.google.android.material.card.MaterialCardView>
