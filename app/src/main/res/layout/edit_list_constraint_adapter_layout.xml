<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/edit_constraint_adapter_mterial_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    app:checkedIcon="@drawable/icons8_check_ok"
    app:checkedIconTint="@color/checked_item_color"
    app:checkedIconSize="30dp"
    app:checkedIconMargin="10dp"
    android:checkable="true"
    app:rippleColor="@color/fill_gray"
    android:background="@null"
    android:backgroundTint="@color/trans"
    android:clickable="true"
    android:focusable="true"
    android:layout_gravity="center"
    android:gravity="center"
    >
        <include
            android:id="@+id/edit_constraint_adapter_bk_frame_layout"
            layout="@layout/icon_caption_layout_for_edit_list"
            android:background="@color/trans"
            android:backgroundTint="@color/trans"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_constraint_adapter_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_green"
            android:gravity="center"
            >
            <include
                android:id="@+id/button_frame_layout1"
                layout="@layout/icon_caption_layout_for_edit_constraint_list"
                />
            <include
                android:id="@+id/button_frame_layout2"
                layout="@layout/icon_caption_layout_for_edit_constraint_list"
                />
            <include
                android:id="@+id/button_frame_layout3"
                layout="@layout/icon_caption_layout_for_edit_constraint_list"
                />
            <include
                android:id="@+id/button_frame_layout4"
                layout="@layout/icon_caption_layout_for_edit_constraint_list"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
