<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/edit_component_adapter_mterial_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="10dp"
    app:checkedIcon="@drawable/icons8_check_ok"
    app:checkedIconTint="@color/checked_item_color"
    app:checkedIconSize="30dp"
    app:checkedIconMargin="10dp"
    android:checkable="true"
    app:rippleColor="@color/trans"
    android:background="@color/ligthBlue"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <include
        android:id="@+id/edit_component_adapter_bk_frame_layout"
        layout="@layout/icon_caption_layout_for_edit_list"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/edit_component_adapter_total_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:weightSum="1">
        <include
            android:id="@+id/vertical_linear1"
            layout="@layout/edit_vertical_linear_layout"
            />
        <include
            android:id="@+id/vertical_linear2"
            layout="@layout/edit_vertical_linear_layout"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>
