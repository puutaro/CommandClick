<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:elevation="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:weightSum="1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/prompt_list_adapter_thumbnail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:layout_weight="0.1"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:alpha="0.7"
            android:layout_gravity="center_vertical"
            />

        <com.puutaro.commandclick.custom_view.OutlineTextView
            android:id="@+id/prompt_list_adapter_title"
            android:text="@string/global_setting_menu_string_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/global_menu_string_size"
            android:textColor="@color/cmdclick_text_black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.9"
            />
        <!--    android:drawableStart="@drawable/icons8_edit"-->
        <!--    android:drawablePadding="20dp"-->

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>