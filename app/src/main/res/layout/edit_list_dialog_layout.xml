<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/edit_list_dialog_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_list_dialog_title_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_list_dialog_title_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_cmdclick_launcher"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edit_list_dialog_title_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_list_dialog_title_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="8"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:textColor="#050505"
        android:text=""
        android:textSize="18sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:autofillHints="test"
        />
    <FrameLayout
        android:id="@+id/edit_list_dialog_frame_layout_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_list_dialog_title_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_list_dialog_search_edit_text"
        android:foregroundGravity="center"
        >
        <FrameLayout
            android:id="@+id/edit_list_bk_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:background="@color/ligthBlue"
            >
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/edit_list_dialog_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textIsSelectable="true"
            android:scrollbars="vertical"
            android:background="@null"
            android:fadeScrollbars="false"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_list_dialog_search_edit_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_list_dialog_footer_linearlayout"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="#00000000"
        android:hint="search"
        android:textSize="20sp"
        android:autofillHints=""
        android:inputType="text"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/edit_list_dialog_footer_linearlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>