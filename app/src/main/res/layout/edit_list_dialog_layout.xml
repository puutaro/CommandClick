<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/edit_list_dialog_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:backgroundTint="@null">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_list_dialog_title_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_title_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@null"
        android:backgroundTint="@null"
        />
    <FrameLayout
        android:id="@+id/edit_list_dialog_backstack_count_frame"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_title_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_list_dialog_title_view"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:foregroundGravity="center"
        android:layout_marginEnd="15dp"
        android:background="@null"
        android:backgroundTint="@null"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/edit_list_dialog_backstack_count"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:gravity="center_vertical"
            android:alpha="1"
            android:layout_marginStart="0dp"
            android:layout_gravity="center_vertical"
            app:shapeAppearanceOverlay="@style/round_corner_for_backstack_count"
            app:srcCompat="@drawable/white_grad"
            android:background="@null"
            android:backgroundTint="@null"
            android:foregroundGravity="center"
            />
    </FrameLayout>
    <com.puutaro.commandclick.custom_view.OutlineTextView
        android:id="@+id/edit_list_dialog_title_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_title_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_list_dialog_backstack_count_frame"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="#050505"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:backgroundTint="@null"
        />
    <FrameLayout
        android:id="@+id/edit_list_dialog_frame_layout_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_list_dialog_title_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_list_dialog_search_edit_text"
        android:foregroundGravity="center"
        android:background="@null"
        android:backgroundTint="@null"
        >
        <FrameLayout
            android:id="@+id/edit_list_bk_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:background="@null"
            android:backgroundTint="@null"
            >
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/edit_list_dialog_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textIsSelectable="true"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:layout_gravity="center"
            android:background="@null"
            android:backgroundTint="@null"
            />
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_list_dialog_search_edit_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_list_dialog_footer_horizon_layout"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        android:hint="search"
        android:textSize="20sp"
        android:autofillHints=""
        android:inputType="text"
        android:visibility="gone"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/edit_list_dialog_footer_horizon_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:backgroundTint="@null"
        >
        <include
            android:id="@+id/vertical_linear1"
            layout="@layout/edit_vertical_linear_layout"
            />
        <include
            android:id="@+id/vertical_linear2"
            layout="@layout/edit_vertical_linear_layout"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>